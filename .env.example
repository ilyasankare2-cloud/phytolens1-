# Configuración de VisionPlant

## Variables de entorno
DEBUG=False
LOG_LEVEL=INFO

## Caché
CACHE_MAX_ITEMS=1000
CACHE_TTL_SECONDS=86400
CACHE_ENABLE_DISK=True
CACHE_ENABLE_REDIS=False

## Servidor
HOST=0.0.0.0
PORT=8000
WORKERS=4

## Modelo
MODEL_DEVICE=cpu
MODEL_TTA=False

## Archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10
CLEANUP_INTERVAL_SECONDS=3600

## Base de datos (opcional)
DATABASE_URL=sqlite:///./visionplant.db
